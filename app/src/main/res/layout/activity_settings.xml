<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:layout_margin="22dp"
    tools:context=".SettingsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="הגדרות"
        android:padding="10dp"
        android:gravity="right"
        android:textColor="@color/black"
        android:textSize="35dp"
        >
    </TextView>
        <!-- אופציה להשתקת צלילים -->
        <Switch
            android:id="@+id/switch_sound"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="צלילים"
            android:padding="6dp"
            android:textSize="25dp"
            android:checked="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="רמת קושי"
        android:textSize="18dp"
        android:textColor="@color/black"
        />

        <!-- בחירת סוג קושי -->
        <Spinner
            android:id="@+id/spinner_difficulty"
            android:textDirection="rtl"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:padding="6dp"
            android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="משך הצגת הקלפים"
        android:textSize="18dp"
        android:textColor="@color/black"
        />
        <Spinner
            android:id="@+id/spinner_time"
            android:textDirection="rtl"
            android:layout_marginBottom="20dp"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="בחירת נושא"
            android:textSize="18dp"
            android:textColor="@color/black"
            />
        <!-- בחירת נושא המשחק -->
        <RadioGroup
            android:id="@+id/radio_group_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_button_theme1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="חיות"/>

            <RadioButton
                android:id="@+id/radio_button_theme2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="דמויות מצוירות"/>

            <RadioButton
                android:id="@+id/radio_button_theme3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="נושא 3"/>
        </RadioGroup>

    <Button
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:text="Save"
        android:textSize="25dp"
        android:fontFamily="@font/title"
        android:layout_marginTop="30dp"
        android:textColor="#56221F"
        android:backgroundTint="#00FEFEFE"
        android:id="@+id/saveButton"
        android:layout_height="60dp"/>
</LinearLayout>


