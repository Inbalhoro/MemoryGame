<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="right"
    android:padding="16dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:weightSum="1"
        android:orientation="horizontal">
        <!-- אייקון -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_home"
            android:contentDescription="Home Page"
            android:layout_marginEnd="8dp" /> <!-- רווח בין האייקון לטקסט -->

        <!-- טקסט -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Page"
            android:textSize="18sp"
            android:textColor="@android:color/black" />
    </LinearLayout>


    <LinearLayout
    android:layout_width="wrap_content"
        android:weightSum="1"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
    android:orientation="horizontal">
        <!-- אייקון -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_settings_24"
            android:contentDescription="Settings"
            android:layout_marginEnd="8dp" /> <!-- רווח בין האייקון לטקסט -->

        <!-- טקסט -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="18sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="3"
        android:orientation="horizontal">
        <!-- אייקון -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_rank"
            android:contentDescription="Rank"
            android:layout_marginEnd="8dp" /> <!-- רווח בין האייקון לטקסט -->

        <!-- טקסט -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rank"
            android:textSize="18sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="4"
    android:orientation="horizontal">
    <!-- אייקון -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_shopping_cart"
        android:contentDescription="Shop Icon"
        android:layout_marginEnd="8dp" /> <!-- רווח בין האייקון לטקסט -->

    <!-- טקסט -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop"
        android:textSize="18sp"
        android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal">
        <!-- אייקון -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_restart"
            android:contentDescription="Restart"
            android:layout_marginEnd="8dp" /> <!-- רווח בין האייקון לטקסט -->

        <!-- טקסט -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart"
            android:textSize="18sp"
            android:textColor="@android:color/black" />
    </LinearLayout>


</LinearLayout>

